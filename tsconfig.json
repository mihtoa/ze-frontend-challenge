{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@hooks": ["./src/hooks"],
    },
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es2022",
    "target": "es2015",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "typeRoots": ["./node_modules/@types", "./src/types"],
  }
}
